@model VerifyAuthenticatorCodeViewModel
@{
    ViewData["Title"] = "Mã xác thực";
    Layout = "_SubLayout";
}

<h1>@ViewData["Title"].</h1>

<form asp-controller="Account" asp-action="VerifyAuthenticatorCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="RememberMe" type="hidden" />
    <h4>@ViewData["Status"]</h4>
    <div class="form-group">
        <label asp-for="Code" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="login_submit">
        <label asp-for="RememberBrowser">
            <input asp-for="RememberBrowser" />
            @Html.DisplayNameFor(m => m.RememberBrowser)
        </label>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    </div>
    <p>
        <a asp-action="UseRecoveryCode">Mất mã xác thực, sử dụng mã phục hồi đã lưu?</a>
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
