@model X.PagedList.IPagedList<BookShopV2.ViewModels.ProductVM>

@using Microsoft.AspNetCore.Http

<!--shop tab product-->
<div class="shop_tab_product">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="large" role="tabpanel">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6" >
                        <div class="single_product" data-masp="@item.ProductId">
                            <div class="product_thumb">
                                <a asp-action="ViewDetail" asp-controller="Product" asp-route-productid="@item.ProductId"><img src="assets\img\product\@item.Image" alt="@item.ProductName"></a>
                                <div class="img_icone">
                                    <img src="assets\img\cart\span-new.png" alt="">
                                </div>
                                <div data-toggle ="modal" data-target="#modal" class="product_action">
                                    <a  class="cart_add" href="javascript:void(0);"> <i class="fa fa-shopping-cart"></i> Add to cart</a>
                                </div>
                            </div>
                            <div class="product_content">
                                <span class="product_price">@item.Price VNĐ</span>
                                <h3 class="product_title"><a href="single-product.html">@item.ProductName</a></h3>
                            </div>
                            <div class="product_info">
                                <ul>
                                    <li><a data-toggle="modal" data-target="#modal" onclick="addWishlist(this); return false;" href="#" title=" Add to Wishlist ">Add to Wishlist</a></li>
                                    <li><a href="#" onclick="quickView(this); return false;" data-toggle="modal" data-target="#modal_box" title="Quick view">View Detail</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="tab-pane fade" id="list" role="tabpanel">
            @foreach(var item in Model)
            {
                <div class="product_list_item single_product mb-35" data-masp="@item.ProductId">
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product_thumb">
                                <a href="single-product.html"><img src="assets\img\product\@item.Image" alt="@item.ProductName"></a>
                                <div class="hot_img">
                                    <img src="assets\img\cart\span-hot.png" alt="">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-6 col-sm-6">
                            <div class="list_product_content">
                                <div class="product_ratting">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                    </ul>
                                </div>
                                <div class="list_title">
                                    <h3><a href="single-product.html">@item.ProductName</a></h3>
                                </div>
                                <p class="design">@item.Description</p>

                                <div class="content_price">
                                    <span>@item.Price VNĐ</span>
                                    @* <span class="old-price">$130.00</span> *@
                                </div>
                                <div class="add_links">
                                    <ul>
                                        <li><a data-toggle="modal" data-target="#modal" href="javascript:void(0);" class="cart_add" title="add to cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
                                        <li><a data-toggle="modal" data-target="#modal" onclick="addWishlist(this); return false;" href="#" title="add to wishlist"><i class="fa fa-heart" aria-hidden="true"></i></a></li>
                                        <li><a href="#" onclick="quickView(this); return false;" data-toggle="modal" data-target="#modal_box" title="Quick view"><i class="fa fa-eye" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<!--shop tab product end-->

<!--pagination style start-->
<div class="pagination_style">
    <div class="item_page">
    </div>
    <div class="page_number">
        <span>Trang: </span>
        <ul>
            <li><a href="#" onclick="loadPage(1); return false;" id="firstPage">&laquo;</a></li>
            <li><a href="#" onclick="prevPage(); return false;" id="prevPage">&lsaquo;</a></li>
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li><a href="#" class="@(Model.PageNumber == i ? "text-danger" : "")" onclick="loadPage(@i); return false;" id="page_@i">@i</a></li>
            }
            <li><a href="#" onclick="nextPage(); return false;" id="nextPage">&rsaquo;</a></li>
            <li><a href="#" onclick="loadPage(@Model.PageCount); return false;" id="lastPage">&raquo;</a></li>
        </ul>
    </div>
</div>
<!--pagination style end-->

<!-- modal quick view start -->
<div class="modal fade" id="modal_box" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal_body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <div class="modal_tab">
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active" id="tab1" role="tabpanel">
                                        <div class="modal_tab_img">
                                            <a href="#"><img id="image" src="" alt=""></a>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12">
                            <div class="modal_right">
                                <div class="modal_title mb-10">
                                    <h2 id="name"></h2>
                                </div>
                                <div class="modal_price mb-10">
                                    <span id="price" class="new_price"></span>
                                    @* <span class="old_price">$78.99</span> *@
                                </div>
                                <div class="modal_content mb-5">
                                    <p id="description"></p>
                                </div>

                                <div class="modal_add_to_cart mb-15">
                                    <form action="#">
                                        <input id="quantity_add" min="0" max="100" value="1" type="number">
                                        <button data-toggle="modal" data-target="#modal" data-dismiss="modal" class="cart_add_more" type="submit">add to cart</button>
                                    </form>
                                </div>
                                <div class="modal_social">
                                    <h2>Share this product</h2>
                                    <ul>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal quickview end -->

