<script>
    var currentPage = @Model.PageNumber;
    var totalPageCount = @Model.PageCount;
    var largeTabClass = $('#large_tab').hasClass("active");

    function loadPage(page) {
        if (page < 1 || page > totalPageCount) return;
        currentPage = page;

        var queryString = window.location.search;
        var urlParams = new URLSearchParams(queryString);
        var cate = urlParams.get('category');
        var search = urlParams.get('searchstring');       

        var sortType = $("#sort").val();

        $.ajax({
            url: '/Product/Index',
            data: { page: page, category: cate, searchString:search, sortType:sortType },
            method: 'GET',
            success: function (result) {
                $('#result').html(result);
                if (largeTabClass == false) {
                    $('#list').addClass("show active");
                    $('#large').removeClass("show active");
                }
                if (cate == null&&search==null) { 
                    window.history.pushState(null, '', '?page='+page);                
                } else if (search == null) {
                    window.history.pushState(null, '', '?category=' + cate + '&page=' + page);
                } else if (cate == null) {
                   window.history.pushState(null, '', '?searchstring=' + search + '&page=' + page);
                }
            },
            error: function (xhr, status, error) {
                alert("Có lỗi xảy ra: " + error);
            }
        });      
    }


    function prevPage() {
        loadPage(currentPage - 1);
    }

    function nextPage() {
        loadPage(currentPage + 1);
    }
</script>
