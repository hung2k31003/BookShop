@model IEnumerable<BookShopV2.ViewModels.WishlistVM>
@{
    ViewData["Title"] = "MyWishlist";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb_content">
                <ul>
                    <li><a href="/">home</a></li>
                    <li><i class="fa fa-angle-right"></i></li>
                    <li>wishlist</li>
                </ul>

            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--shopping cart area start -->
<div class="shopping_cart_area">
    <form action="#">
        <div class="row">
            <div class="col-12">
                <div class="table_desc wishlist">
                    <div class="cart_page table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product_remove">Xóa</th>
                                    <th class="product_thumb">Hình ảnh</th>
                                    <th class="product_name">Tên sản phẩm</th>
                                    <th class="product-price">Giá</th>
                                    <th class="product_total">Add To Cart</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr data-masp="@item.ProductId">
                                        <td class="product_remove"><a href="#">X</a></td>
                                        <td class="product_thumb"><a asp-action="ViewDetail" asp-controller="Products" asp-route-productid="@item.ProductId"><img style="width:200px" src="assets\img\product\@item.Image" alt=""></a></td>
                                        <td class="product_name"><a asp-action="ViewDetail" asp-controller="Products" asp-route-productid="@item.ProductId">@item.ProductName</a></td>
                                        <td class="product-price">@item.Price VNĐ</td>
                                        <td class="product_total"><a href="javascript:void(0);" class="cart_add">Add To Cart</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </form>
    <div class="row">
        <div class="col-12">
            <div class="wishlist-share">
                <h4>Share on:</h4>
                <ul>
                    <li><a href="#"><i class="fa fa-rss"></i></a></li>
                    <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                    <li><a href="#"><i class="fa fa-tumblr"></i></a></li>
                    <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                </ul>
            </div>
        </div>
    </div>

</div>
<!--shopping cart area end -->
@section Scripts {
    <script>
        $(document).ready(function () {

            $(document).on('click', '.product_remove', function () {
                masp = $(this).closest("tr").data("masp");
                row = $(this).closest('tr');
                $.ajax({
                    url: "/Customer/removeWishlist",
                    data: { productId: masp },
                    method: "POST",
                    success: function (result) {
                        row.remove();
                    },
                    error: function (xhr, status, error) {
                        alert("Có lỗi xảy ra: " + error);
                    }
                });
            });

            $(document).on('click', '.cart_add', function () {
                var masp = $(this).closest('tr').data('masp');
                var quantity = 1;
                $.ajax({
                    url: '/Customer/addCart',
                    type: 'POST',
                    data: { productId: masp, quantity: quantity },
                    success: function (result) {
                        $("#cart-container").html(result);
                    },
                    error: function (xhr, status, error) {
                        alert("Có lỗi xảy ra: " + error);
                    }
                });
            });
        });
    </script>
}

